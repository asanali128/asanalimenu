    <script>
        function toggle(id) {
            const el = document.getElementById(id);
            el.style.display = el.style.display === "block" ? "none" : "block";
        }
        function ru() {
            document.querySelectorAll('.ru').forEach(e=>e.style.display='block');
            document.querySelectorAll('.kz').forEach(e=>e.style.display='none');
        }
        function kz() {
            document.querySelectorAll('.ru').forEach(e=>e.style.display='none');
            document.querySelectorAll('.kz').forEach(e=>e.style.display='block');
        }
    </script>
